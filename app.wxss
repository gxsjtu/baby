/**app.wxss**/

page {
  font-family: PingFangSC-Regular;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
  position: relative;
}

.optInTemplate-container {
  width: 750rpx;
  background: #fafafa;
  box-shadow: 0 0 0 0 rgba(221, 221, 221, 0.50), 0 0 0 0 rgba(221, 221, 221, 0.50);
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.optInTemplate-item {
  width: 247rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.optInTemplate-split {
  width: 4rpx;
  height: 60rpx;
  border-left: 1rpx solid rgba(0, 0, 0, 0.10);
}

.optInTemplate-item > image {
  width: 42rpx;
  height: 42rpx;
}

.optInTemplate-title {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #6d6d6d;
  letter-spacing: -0.31px;
  margin-left: 10rpx;
}

.optInTemplate-error-container {
  position: absolute;
  width: 750rpx;
  height: 800rpx;
  bottom: 100rpx;
  left: 0;
  z-index: 1000;
  background: white;
}

.optInTemplate-error-container textarea {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  letter-spacing: -0.31px;
  background: #f9f9f9;
  width: 100%;
  height: 100%;
}

.optInTemplate-placeholder {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #9d9d9d;
  letter-spacing: -0.31px;
}
