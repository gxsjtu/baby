/**app.wxss**/

page {
  font-family: PingFangSC-Regular;
  letter-spacing: -0.2rpx;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
  position: relative;
}

.optInTemplate-container {
  width: 750rpx;
  background: #fafafa;
  box-shadow: 0 0 0 0 rgba(221, 221, 221, 0.50), 0 0 0 0 rgba(221, 221, 221, 0.50);
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.optInTemplate-item {
  width: 247rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height:100%;
}

.optInTemplate-split {
  width: 4rpx;
  height: 60rpx;
  border-left: 1rpx solid rgba(0, 0, 0, 0.10);
}

.optInTemplate-item > image {
  width: 42rpx;
  height: 42rpx;
}

.optInTemplate-title {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #6d6d6d;
  letter-spacing: -0.31px;
  margin-left: 10rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.optInTemplate-error-container {
  position: absolute;
  width: 750rpx;
  height: 500rpx;
  /*bottom: 0rpx;*/
  left: 0;
  z-index: 1000;
  background: white;
}

.optInTemplate-error-container textarea {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  letter-spacing: -0.31px;
  background: #f9f9f9;
  width: 650rpx;
  height: 450rpx;
  padding: 50rpx 50rpx 0rpx;
}

.optInTemplate-placeholder {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #9d9d9d;
  letter-spacing: -0.31px;
}

.alert-title {
  background-image: linear-gradient(-95deg, #ff6f6f 0%, #ff4949 54%, #ff6868 100%);
  font-family: PingFangSC-Medium;
  font-size: 18px;
  color: #fff;
  letter-spacing: -0.43px;
  line-height: 96rpx;
  height: 96rpx;
  text-align: center;
  border-top-left-radius: 2px;
  border-top-right-radius: 2px;
  position: relative;
}

.submit{
  position: absolute;
  right: 10rpx;
  font-size: 16px;
  top: 0;
  padding: 0 20rpx;
}

.disable{
  color: #d3d3d3;
}
