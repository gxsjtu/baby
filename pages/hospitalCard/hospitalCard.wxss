page {
  height: 100%;
}

.view-container {
  height: 100%;
  background: #ebebeb;
}

.v-line {
  position: absolute;
  left: 44rpx;
  width: 2rpx;
  height: 100%;
  background-image: linear-gradient(-180deg, #ffdada 85%, rgba(255, 179, 179, 0.00) 100%);
}

.card-item {
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding: 20rpx 60rpx;
  border-bottom: 4rpx solid #f5f5f5;
}

.warning-container {
  background: #fdfdfd;
  border-radius: 4rpx;
  width: 730rpx;
  margin: 0 auto;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-top: 10rpx;
}

.warning {
  font-size: 20rpx;
  color: #ff4949;
  font-family: PingFangSC-Regular;
  /*letter-spacing: -0.25rpx;*/
  padding-left: 80rpx;
  padding-right: 80rpx;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.step-container {
  border-radius: 4rpx;
  padding-top: 20rpx;
  background: #fdfdfd;
  width: 730rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  height: 100%;
}

.name {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #ff4949;
  letter-spacing: -0.32px;
}

.step {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #3d3d3d;
  letter-spacing: -0.37px;
  position: relative;
}

.step::before{
  content: '';
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: #8c8c8c;
  position: absolute;
  top: 0.6em;
  left: -0.6em;
}
