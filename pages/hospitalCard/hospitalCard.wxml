<view class="view-container">
  <view class="warning-container">
    <view class="warning">注意事项</view>
    <view class="warning" wx:for="{{warning}}" wx:for-item="item" wx:key="index">{{index+1}}. {{item}}</view>
  </view>
  <view class="step-container">
    <view class="v-line"></view>
    <view class="card-item" wx:for="{{cards}}" wx:key="index" wx:for-item="card">
      <view class="name" data-index="{{index + 1}}">{{card.name}}</view>
      <view wx:for="{{card.steps}}" wx:key="index" wx:for-item="step" class="step">{{step}}</view>
      <view clss="image-container">
        <image wx:for="{{card.images}}" hidden="{{image.hidden}}" wx:key="id" wx:for-item="image" id="{{image.id}}" src="{{image.url}}" class="step-image" style="width:{{imgWidth}}rpx;height:{{image.height}}rpx" bindload="onImageLoad" bindtap="showImages" data-images="{{card.images}}" data-url="{{image.url}}" />
      </view>
    </view>
  </view>
</view>
