.address-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 750rpx;
  height: 220rpx;
}

.placeholder {
  margin-left: 30rpx;
  font-size: 18px;
  width: 650rpx;
}

/*.address{
    
