page {
    height: 100%;
}

.container {
    height: 100%;
    position: relative;
}

.header {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333;
    letter-spacing: -0.37px;
    text-align: center;
    margin: 30rpx auto;
}

.content {
    font-family: PingFangSC-Light;
    font-size: 24rpx;
    color: #6d6d6d;
    letter-spacing: 0;
    margin-left: 30rpx;
    margin-right: 24rpx;
}

.hr {
    width: 750rpx;
    height: 10rpx;
    background: #ebebeb;
    margin-top: 40rpx;
}

.calc-header {
    width: 750rpx;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #3d3d3d;
    letter-spacing: -0.37px;
    text-align: center;
    margin-top: 26rpx;
}

.title {
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
    color: #6d6d6d;
    letter-spacing: -0.25px;
    margin-left: 30rpx;
    margin-top: 28rpx;
}

.date-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 20rpx;
}

.footer {
    position: absolute;
    bottom: 0rpx;
    width: 750rpx;
    /*height: 110rpx;*/
    background: #fafafa;
    box-shadow: 0 0 2rpx 0 rgba(0, 0, 0, 0.20);
    /*display: flex;*/
    align-items: center;
    justify-content: center;
}

.btn {
    background: #ff4949;
    border-radius: 100px;
    font-family: PingFangSC-Regular;
    font-size: 15px;
    color: #fff;
    letter-spacing: -0.37px;
    width: 390rpx;
    height: 35px;
    line-height: 70rpx;
    margin-bottom:10px;
}

.result {
    position: absolute;
    /*width: 550rpx;
  height: 384rpx;
  background: #fff;
  border-radius: 8rpx;*/
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.60);
    z-index: 999;
    display: flex;
    flex-direction: row;
    /*align-items: center;*/
    padding-top: 50%;
    justify-content: center;
}

.result-container {
    z-index: 1000;
    width: 550rpx;
    height: 384rpx;
    background: #fff;
    border-radius: 8rpx;
}

.result-header {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #3d3d3d;
    letter-spacing: -0.74rpx;
    text-align: center;
    margin-top: 30rpx;
}

.result-hr {
    border: 1rpx solid rgba(0, 0, 0, 0.10);
    width: 508rpx;
    margin: 30rpx auto 0rpx auto;
}

.result-item {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #6d6d6d;
    letter-spacing: -0.64rpx;
    line-height: 26rpx;
    margin-bottom: 34rpx;
    text-align: center;
}

.first {
    margin-top: 34rpx;
}

.result-text {
    font-family: PingFangSC-Regular;
    font-size: 40rpx;
    color: #ff4949;
    letter-spacing: -0.98rpx;
    line-height: 40rpx;
}

picker {
    background: #fff;
    border: 1rpx solid rgba(0, 0, 0, 0.30);
    border-radius: 100rpx;
    height: 64rpx;
}

.picker-container {
    width: 100%;
    height: 64rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.year, .month, .date, .average {
    margin-left: 40rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #3d3d3d;
    letter-spacing: -0.78rpx;
    line-height: 32rpx;
}

.unit {
    margin-left: 10rpx;
    width: 20rpx;
    height: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
    color: #9d9d9d;
    letter-spacing: -0.5rpx;
    line-height: 20rpx;
}

.picker-container image {
    width: 18rpx;
    height: 10rpx;
}

.average-date {
    margin-top: 20rpx;
}

.desc {
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.result1 {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 999;
    display: flex;
    flex-direction: row;
    padding-top: 50%;
    justify-content: center;
}
