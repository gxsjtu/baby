<view class="container">
  <scroll-view scroll-y="true" style="height:{{scrollHeight}}">
    <swiper indicator-dots="true" autoplay="false">
      <block wx:for="{{slideImgs}}" wx:for-item="item">
        <swiper-item>
          <image src="{{item}}"></image>
        </swiper-item>
      </block>
    </swiper>
    <view style="margin-left:30rpx;">
      <view style="margin-top:36rpx;font-size:36rpx;color:#000;font-family:PingFang-SC-Regular;">{{buyItem.title}} {{buyItem.subtitle}}</view>
      <view style="margin-top:16rpx;font-size:36rpx;color:#000;font-family:PingFang-SC-Regular;">{{buyItem.brand}} {{buyItem.name}}</view>
      <view style="margin-top:40rpx;display:flex;flex-direction:row;align-items:center;position:relative;">
          <view style="font-size:30rpx;color:#ff3131;font-family:PingFang-SC-Regular;">事妈价</view>
          <view style="font-size:40rpx;color:#ff3131;">￥{{buyItem.price}}</view>
          <view style="position:absolute;font-size:30rpx;color:#929292;margin-left:314rpx;display:flex;flex-direction:row;font-family:PingFang-SC-Regular;">市场价<view style="font-size:30rpx;color:#929292;text-decoration:line-through;margin-left:10rpx;">￥{{buyItem.mPrice}}</view></view>
      </view>
      <view style="position:relative;margin-top:42rpx;border-top:1px solid #f0f0f0;height:74rpx;display:flex;flex-direction:row;align-items:center;">
        <view style="font-size:28rpx;color:#929292">运费：免运费</view>
        <view style="position:absolute;font-size:28rpx;color:#929292;padding-left:314rpx;;">销量：998</view>
      </view>
    </view>
    <view style="height:28rpx;border-top:1px solid #f0f0f0;border-bottom:1px solid #f0f0f0;"></view>
  </scroll-view>
  <view style="display:flex;flex-direction:row;width:{{outWidth}}">
    <view class="bottom-s" style="width:{{bottomWidth}};" bindtap="goEvaluate">
      <image src="../../assets/images/giftCanPL.png" style="width:50rpx;height:50rpx;"></image>
      <view>评论</view>
    </view>
    <view style="width:{{bottomWidth}};height:51px;background: #ebebeb;">
    </view>
    <view style="width:{{bottomWidth}};height:51px;background: #ebebeb;">
    </view>
    <view style="font-size:14px;width:{{buyWidth}};display:flex;justify-content:center;align-items:center;background:#ff4949;color:#fff" bindtap="buyGift">
      <view>立刻购买</view>
      <view style="margin-left:2px;width:10px;height:10px;border-top:2px solid #fff;border-right:2px solid #fff;transform:rotate(45deg);background:#ff4949;"></view>
    </view>
  </view>
</view>