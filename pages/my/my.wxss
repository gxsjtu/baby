
.header {
  width: 750rpx;
  height: 294rpx;
  /*background: white url(../../assets/images/path.png) no-repeat bottom;*/
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 60rpx 0 0 315rpx;
  position: absolute;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.nickName {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #3d3d3d;
  letter-spacing: -0.39px;
  width: 750rpx;
  text-align: center;
  margin-top: 210rpx;
  position: absolute;
}

.menu-container {
  width: 750rpx;
  background: white;
}

.menu-name {
  font-size: 16px;
}

.menu-desc {
  font-size: 14px;
  color: #bbb;
  margin-top: 10rpx;
}

.menu, .menu-item {
  display: flex;
}

.menu {
  height: 150rpx;
  width: 700rpx;
  margin: 0 auto;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}

.menu-item {
  flex-direction: column;
  width: 560rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 60rpx;
  margin-left: 60rpx;
}

.icon image {
  height: 100%;
  width: 100%;
}

.arrow {
  width: 14rpx;
  height: 14rpx;
  border-bottom: 2rpx solid #dcdcdc;
  border-right: 2rpx solid #dcdcdc;
  transform: rotate(-45deg);
}

