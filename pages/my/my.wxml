<view class="container">
  <view class="header">
    <view class="avatar">
      <image src="{{userInfo.avatarUrl}}"></image>
    </view>
    <view class="nickName">
        {{userInfo.nickName}}
    </view>
  </view>
  <view class="menu-container">
    <view class="menu" bindtap="gotoInfo">
        <view class="menu-item">
            <view class="menu-name">个人信息</view>
            <view class="menu-desc">编辑修改个人资料</view>
        </view>
        <view class="icon">
            <image src="../../assets/images/info.png"></image>
        </view>
        <view class="arrow">    
        </view>
    </view>

    <view class="menu" data-menuname="我的成就" bindtap="gotoWait">
        <view class="menu-item">
            <view class="menu-name">我的成就</view>
            <view class="menu-desc">查看自己所获得的所有成就</view>
        </view>
        <view class="icon">
            <image src="../../assets/images/achievement.png"></image>
        </view>
        <view class="arrow">    
        </view>
    </view>

    <view class="menu" bindtap="gotoWait" data-menuname="我的订单">
        <view class="menu-item">
            <view class="menu-name">我的订单</view>
            <view class="menu-desc">查看所有订单内容</view>
        </view>
        <view class="icon">
            <image src="../../assets/images/order.png"></image>
        </view>
        <view class="arrow">    
        </view>
    </view>

    <view class="menu" bindtap="gotoWait" data-menuname="我的收藏">
        <view class="menu-item">
            <view class="menu-name">我的收藏</view>
            <view class="menu-desc">查看所有订阅信息</view>
        </view>
        <view class="icon">
            <image src="../../assets/images/favorite.png"></image>
        </view>
        <view class="arrow">    
        </view>
    </view>

    <view class="menu" bindtap="gotoWait" data-menuname="我的提醒">
        <view class="menu-item">
            <view class="menu-name">我的提醒</view>
            <view class="menu-desc">查看所有提醒设置</view>
        </view>
        <view class="icon">
            <image src="../../assets/images/bell.png"></image>
        </view>
        <view class="arrow">    
        </view>
    </view>

  </view>
</view>