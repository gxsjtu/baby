.header {
  width: 750rpx;
  height: 294rpx;
  /*background: white url(../../assets/images/path.png) no-repeat bottom;*/
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 60rpx 0 0 315rpx;
  position: absolute;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.nickName {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #3d3d3d;
  letter-spacing: -0.39px;
  width: 750rpx;
  text-align: center;
  margin-top: 210rpx;
  position: absolute;
}

.info-container {
  width: 750rpx;
  background: white;
}

