.container {
  background: white;
  width: 750rpx;
  overflow-x: hidden;
}

.header {
  width: 750rpx;
  height: 168rpx;
  position: relative;
}

.header image {
  width: 100%;
  height: 100%;
  
}

.title {
  position: absolute;
  font-family: PingFangSC-Medium;
  font-size: 20px;
  color: #fff;
  letter-spacing: -0.48px;
  width: 750rpx;
  text-align: center;
  top: 50rpx;
}

.content {
  margin: 30rpx auto 0rpx auto;
  width: 690rpx;
  border: 1px solid rgba(254, 97, 97, 0.2);
  border-radius: 2px;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #6d6d6d;
  letter-spacing: -0.31px;
}

.wrap {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.footer {
  display: flex;
  justify-content: center;
  width: 750rpx;
}

.footer-btn {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #fff;
  letter-spacing: -0.39px;
  background: #ff4949;
  border-radius: 40px;
  width: 266rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}

.footer-btn:last-child {
  margin-left: 58rpx;
}

.credentials {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  width: 650rpx;
}

.credential-name {
  font-family: PingFangSC-Regular;
  font-size: 10px;
  letter-spacing: -0.24px;
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  width: 290rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 10rpx;
}

.credential-container {
  margin: 20rpx 0 0;
  position: relative;
}

.label {
  font-family: PingFangSC-Medium;
  font-size: 15px;
  color: #3d3d3d;
  letter-spacing: -0.36px;
}

.note {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #6d6d6d;
  letter-spacing: -0.31px;
}

.question {
  font-family: PingFangSC-Medium;
  font-size: 12px;
  color: #ff4949;
  letter-spacing: -0.29px;
  text-align: center;
  padding: 26rpx;
  width: 750rpx;
}

.wrap-container{
  margin-top: 30rpx;
}

.wrap-container:first-child{
  margin-top: 0;
}
