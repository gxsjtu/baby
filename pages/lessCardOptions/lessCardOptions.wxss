page {
  background: #fff;
  height: 100%;
}

.view-container {
  height: 100%;
  width: 750rpx;
}

.select-container {
  background: white;
  /*border:1px solid #d3d3d3;*/
  position: absolute;
  top: 78rpx;
  left: 35rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 620rpx;
  z-index: 1000;
  border-radius: 6rpx;
}

.filter-container {
  width: 100%;
  height: 96rpx;
  background: #fff;
  /*box-shadow: 0 0 0 0 rgba(0, 0, 0, 0.05), 0 0 4px 0 rgba(0, 0, 0, 0.08);*/
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: -10rpx;
  position: relative;
}

.filter-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  /*color: #9d9d9d;*/
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #3d3d3d;
  letter-spacing: -0.31px;
  width: 250rpx;
  justify-content: center;
  border: 1px solid rgba(0, 0, 0, 0.10);
  margin-left: 15px;
  /*padding-top: 5px;
  padding-bottom: 5px;*/
  height:60rpx;
}

.filter-arrow {
  width: 16rpx;
  height: 16rpx;
  border-left: 1px solid #9d9d9d;
  border-bottom: 1px solid #9d9d9d;
  transform: rotate(-45deg);
  border-radius: 4rpx;
  margin-left: 20rpx;
  margin-top: -8rpx;
}

.arrow {
  width: 18rpx;
  height: 18rpx;
  /*border-left:2rpx solid #d3d3d3;
  border-top:2rpx solid #d3d3d3;*/
  transform: rotate(45deg);
  margin-top: -8rpx;
  background: white;
  z-index: 1001;
}

.area-arrow {
  margin-left: 100rpx;
}

.street-arrow {
  margin-left: 300rpx;
}

.select-item {
  display: flex;
  flex-direction: column;
  width: 590rpx;
  margin-left: 30rpx;
}

.select-item view {
  color: #3d3d3d;
  font-family: PingFangSC-Regular;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid rgba(211, 211, 211, 0.3);
  font-size: 30rpx;
}

scroll-view {
  height: 630rpx;
}

.select-item > view::last-child {
  padding: 20rpx 10rpx;
}

.mask {
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
  top: -2rpx;
  left: -2rpx;
  bottom: -2rpx;
  right: -2rpx;
  z-index: 999;
}

.crop {
  overflow: hidden;
}

.title-s {
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #3d3d3d;
  letter-spacing: -0.39px;
  padding-left: 15px;
  padding-top: 15px;
  padding-bottom: 15px;
}

.content {
  margin: 30rpx auto 0rpx auto;
