page {
  height: 100%;
}

.view-container {
  width: 750rpx;
  height: 100%;
  position: relative;
  background:#ebebeb;
}

.scroll-style {
  height: calc(100% - 110 - 5)rpx;
}

.class_outer {
  display: block;
  position: relative;
  overflow: hidden;
  height: 240rpx;
}

.class_cover {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  opacity: 0.69;
  background: #000;
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  bottom: 0rpx;
}

.items-style {
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 50px;
}

.border-b {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.border-r {
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
}

.btn-style {
  background: #FF4949;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #fff;
  letter-spacing: -0.37px;
  border-radius: 100px;
  width:195px;
  height:35px;
  line-height: 35px;
}

.btn-f {
  border-radius: 100px;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  letter-spacing: -0.37px;
  width:195px;
  height:35px;
  line-height: 35px;
}

button::after {
  border: 0px;
}

button[disabled][type="default"], wx-button[disabled]:not([type]) {
  color: #fff;
  background: #d7d7d7;
}

.result {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.60);
    z-index: 999;
    display: flex;
    flex-direction: row;
    padding-top: 50%;
    justify-content: center;
}

.result-container {
    z-index: 1000;
    width: 100%;
    height: 540rpx;
    background: #fff;
    border-radius: 8rpx;
}
