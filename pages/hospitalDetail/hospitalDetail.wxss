page {
  height: 100%;
}

.view-container {
  width: 750rpx;
  height: 100%;
}

.scroll-style {
  height: calc(100% - 110 - 5)rpx;
}

.class_outer {
  display: block;
  position: relative;
  overflow: hidden;
  height: 240rpx;
}

.class_cover {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  opacity: 0.69;
  background: #000;
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  bottom: 0rpx;
}

.items-style {
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 50px;
}

.border-b {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.border-r {
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
}

.btn-style {
  background: #f26a77;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #fff;
  letter-spacing: -0.37px;
  border-radius: 100px;
}

.btn-f {
  background: #d7d7d7;
  border-radius: 100px;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #fff;
  letter-spacing: -0.37px;
}

button::after{
  border: 0px;
}
