page{
  height:100%;
}
.view-container {
  width: 750rpx;
  height:100%;
}

.scroll-style{
  height:calc(100% - 110 - 5)rpx;
}

.class_outer {
  display: block;
  position: relative;
  overflow: hidden;
  height: 240rpx;
}

.class_cover {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: rgba(0, 0, 0, 0.50);
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  bottom: 0rpx;
}

.items-style {
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  height:100%;
}

.border-b{
  border-bottom: 1rpx solid rgba(0,0, 0, 0.1);
}

.border-r{
  border-right: 1rpx solid rgba(0,0, 0, 0.1);
}

.btn-style {
  /*padding-top: 54rpx;*/
  background: #ff4949;
  border-radius: 200rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #fff;
  letter-spacing: -0.74rpx;
  width: 390rpx;
  height: 70rpx;
}
