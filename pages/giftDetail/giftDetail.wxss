.container {
  font-family: pingfangsc-regular;
  font-size: 30rpx;
  letter-spacing: -0.2rpx;
  line-height: 40rpx;
}

.logo {
  width: 750rpx;
  height: 406rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.split {
  width: 750rpx;
  height: 5px;
  background: #ebebeb;
}

.description {
  letter-spacing: -0.2rpx;
  line-height: 48rpx;
  padding: 40rpx 60rpx 0;
}

.description-name {
  font-size: 30rpx;
}

.detail {
  font-size: 32rpx;
  color: #df3030;
}

.recommends-container {
  padding: 40rpx 60rpx;
}

.recommend {
  margin-bottom: 10rpx;
}

.recommend:last-child {
  margin-bottom: 0rpx;
}

.discounts-container{
  padding: 40rpx 28rpx;
}

.discount {
  display: flex;
  align-items: flex-start;
}

.discount image {
  width: 26rpx;
  height: 26rpx;
  margin-top: 8rpx;
  margin-right: 6rpx;
}

.flag {
  background: #ff4848;
  position: relative;
  height: 23px;
  display: flex;
  color: white;
  width: 4em;
  padding-right: 18px;
  padding-left: 5px;
  margin-top: 10px;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  letter-spacing: -0.37px;
  align-items: center;
}

.flag:after {
  display: block;
  content: '';
  position: absolute;
  background: white;
  transform: rotate(45deg);
  width: 18px;
  height: 18px;
  right: -8px;
  top: 2px;
}

.bottom-s{
  height:51px;
  background: #ebebeb;
  color:#a2a2a2;
  font-size:12px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /*border-top:1px solid #a2a2a2;*/
  border-right:1px solid #a2a2a2;
  /*border-bottom:1px solid #a2a2a2;*/
}

.price-container{
  display: flex;
  font-weight: lighter;
}