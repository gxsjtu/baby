
.flag {
  background: #ff4848;
  position: relative;
  height: 23px;
  /*line-height: 40rpx;*/
  display: flex;
  color: white;
  width:3em;
  padding-right: 18px;
  padding-left: 5px;
  margin-top: 10px;
  font-family: PingFangSC-Regular;
  font-size: 10px;
  letter-spacing: -0.37px;
  align-items: center;
}

.flag:after {
  display: block;
  content: '';
  position: absolute;
  background: white;
  transform: rotate(45deg);
  width: 18px;
  height: 18px;
  right: -8px;
  top: 2px;
}
