.container {
  background: white;
}

.header {
  width: 750rpx;
  height: 168rpx;
  position: relative;
}

.header image {
  width: 100%;
  height: 100%;
}

.title {
  position: absolute;
  font-family: PingFangSC-Medium;
  font-size: 20px;
  color: #fff;
  letter-spacing: -0.48px;
  width: 750rpx;
  text-align: center;
  top: 50rpx;
}

.content {
  margin: 30rpx auto 0rpx auto;
  width: 690rpx;
  height: 774rpx;
  border: 1px solid rgba(254, 97, 97, 0.2);
  border-radius: 2px;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #6d6d6d;
  letter-spacing: -0.31px;
}

.wrap {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.footer {
  display: flex;
  justify-content: center;
  width: 750rpx;
  margin-top: 60rpx;
}

.footer-btn {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #fff;
  letter-spacing: -0.39px;
  background: #ff4949;
  border-radius: 40px;
  width: 550rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}

.credentials {
  display: flex;
  flex-wrap: wrap;
}

.credential-name {
  font-family: PingFangSC-Regular;
  font-size: 10px;
  letter-spacing: -0.24px;
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  width: 290rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 10rpx;
}

.credential-container {
  margin-top: 24rpx;
  width: 300rpx;
  height: 160rpx;
  position: relative;
}

.credential-container:nth-child(even) {
  margin-left: 40rpx;
}

.credential-container image {
  width: 100%;
  height: 100%;
}

.label {
  font-family: PingFangSC-Medium;
  font-size: 15px;
  color: #3d3d3d;
  letter-spacing: -0.36px;
}

.note {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #6d6d6d;
  letter-spacing: -0.31px;
}
