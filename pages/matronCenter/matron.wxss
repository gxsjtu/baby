.container {
  background: #ebebeb;
}

.split {
  background: #ebebeb;
  height: 10rpx;
}

.item, .price-container, .item-container, .rate-container, .remark, .title,
.score {
  display: flex;
}

.item-container {
  flex-direction: column;
  margin-left: 30rpx;
  justify-content: center;
}

.name {
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #3d3d3d;
  letter-spacing: -0.36px;
  width: 330rpx;
}

.image-container {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item {
  background: white;
  width: 690rpx;
  padding: 20rpx 30rpx;
}

.rate {
  width: 32rpx;
  height: 32rpx;
}

.address {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #9d9d9d;
  letter-spacing: -0.29px;
  margin-right: 20rpx;
}

.title, .rate-container, .score {
  align-items: center;
}

.price-label {
  font-family: PingFangSC-Regular;
  font-size: 10px;
  color: #9d9d9d;
  letter-spacing: -0.31px;
  width: 60rpx;
}

.price {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #ee6723;
  letter-spacing: -0.31px;
  line-height: 14px;
  width: 112rpx;
  text-align: right;
  margin-right: 20rpx;
}

.tel {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #3d3d3d;
  letter-spacing: -0.31px;
  width: 260rpx;
  text-align: right;
  margin-right: 20rpx;
}

.rate-container{
    width: 240rpx;
}

.item-split{
    height: 10rpx;
}
