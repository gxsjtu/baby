.view-container{
    height:100%;
    background-color:#fff;
}

.menu-container{
    height: 66rpx;
    line-height: 66rpx;
    border: 1px solid #FF4949;
    border-radius: 100rpx;
    margin: 20rpx 90rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    overflow: hidden;
}

.menu-item{
    width:50%;
    text-align:center;
    height:66rpx;
    line-height:66rpx;
    font-size: 30rpx;
    position: relative;
    color: #ff4949;
    font-family: PingFangSC-Regular;
    letter-spacing: -0.37px;
}

.menu-active{
    color:#fff;
    background: #ff4949;
}

.list-container{
  padding-top:1rpx;
  width:750rpx;
}

.list-wrap{
  width:688rpx;
  margin:4rpx auto;
}

.list-item{
  background-color:white;
  display:flex;
  flex-direction:row;
  border-bottom:1px solid rgba(0,0,0,0.1);
  margin:0 10rpx;
  padding:0 20rpx;
  align-items:center;
  height:104rpx;
}

.list-item:first-child{
  border-radius:8rpx 8rpx 0 0;
}

.list-item:last-child{
  border-radius:0 0 8rpx 8rpx;
}

.list-title{
  font-size:30rpx;
  letter-spacing: -0.64rpx;
  width:500rpx;
}

.list-date{
  font-size:30rpx;
  color:#6D6D6D;
  width:200rpx;
  text-align:right;
}

.list-arrow{
  width:14rpx;
  height:14rpx;
  border-right:1px solid #E2D8D8;
  border-bottom:1px solid #E2D8D8;
  transform: rotate(-45deg);
  margin-left:15rpx;
}

page{
  background:#fff;
}

.mask{
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
  top: -2rpx;
  left: -2rpx;
  bottom: -2rpx;
  right: -2rpx;
  z-index: 999;
  /*opacity: 0;*/
}

.full{
  width: 100%;
  height: 100%;
}

.alert{
  position: absolute;
  width: 700rpx;
  height: 398rpx;
  top: 50%;
  left: 50%;
  margin-top: -200rpx;
  margin-left: -350rpx;
  z-index: 1000;
  /*background: white;*/
  background: transparent;
  /*background: white url(../../assets/images/timg.jpeg) no-repeat center;
  background-size: 200rpx 200rpx;*/
  border-radius: 20rpx;
  overflow: hidden;
}

.container{
  position: relative;
  height: 100%;
}

.crop{
  overflow: hidden;
  height: 100%;
}
page{
  height: 100%;
}

