.list-container{
  padding-top:1rpx;
  width:750rpx;
}

.list-wrap{
  width:688rpx;
  margin:4rpx auto;
}

.list-item{
  background-color:white;
  display:flex;
  flex-direction:row;
  border-bottom:1px solid rgba(0,0,0,0.1);
  margin:0 10rpx;
  padding:0 20rpx;
  align-items:center;
  height:104rpx;
}

.list-item:first-child{
  border-radius:8rpx 8rpx 0 0;
}

.list-item:last-child{
  border-radius:0 0 8rpx 8rpx;
}

.list-title{
  font-size:30rpx;
  letter-spacing: -0.64rpx;
  width:500rpx;
}

.list-date{
  font-size:30rpx;
  color:#6D6D6D;
  width:200rpx;
  text-align:right;
}

.list-arrow{
  width:14rpx;
  height:14rpx;
  border-right:1px solid #E2D8D8;
  border-bottom:1px solid #E2D8D8;
  transform: rotate(-45deg);
  margin-left:15rpx;
}

