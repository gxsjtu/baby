.name-line {
  text-decoration: none;
  width: 550rpx;
}

.name-linef {
  text-decoration: line-through;
  color: #FF4949;
  width: 550rpx;
}

.name-line .list-name,.list-qty-line{
  color: #6d6d6d;
}

.name-linef .list-name,.list-qty-linef{
  color: #adadad;
}

.name-s {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #3d3d3d;
  letter-spacing: -0.36px;
  padding-left: 20rpx;
}

.outer-s {
  padding-top: 15px;
  padding-bottom: 25px;
}

.container {
  position: relative;
  background: #ebebeb;
}

.view-container {
  background: #fff;
  width: 730rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.desc {
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.result {
    position: absolute;
    left: 0;
    right: 0;
    z-index: 999;
    display: flex;
    flex-direction: row;
    padding-top: 50%;
    justify-content: center;
}
