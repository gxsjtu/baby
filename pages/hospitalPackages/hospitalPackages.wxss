.list-item {
  background-color: white;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  margin: 0 10rpx;
  padding: 0 20rpx;
  align-items: center;
  height: 84rpx;
}

.list-name {
  font-family: PingFangSC-Regular;
  /*font-size: 13px;*/
  font-size: 28rpx;
  /*color: #6d6d6d;*/
  letter-spacing: -0.31px;
}

.list-qty {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  /*color: #9d9d9d;*/
  letter-spacing: -0.31px;
  width: 80rpx;
  text-align: right;
}

