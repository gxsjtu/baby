.container {
  background: white;
}

.header {
  width: 750rpx;
  height: 168rpx;
  position: relative;
}

.header image {
  width: 100%;
  height: 100%;
}

.title {
  position: absolute;
  font-family: PingFangSC-Medium;
  font-size: 20px;
  color: #fff;
  letter-spacing: -0.48px;
  width: 750rpx;
  text-align: center;
  top: 50rpx;
}

.content {
  margin: 30rpx auto 0rpx auto;
  width: 690rpx;
  height: 862rpx;
  border: 1px solid rgba(254, 97, 97, 0.2);
  border-radius: 2px;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #6d6d6d;
  letter-spacing: -0.31px;
}

.wrap {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.footer {
  display: flex;
  justify-content: center;
  width: 750rpx;
  margin-top: 26rpx;
}

.footer-btn {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #fff;
  letter-spacing: -0.39px;
  background: #ff4949;
  border-radius: 40px;
  width: 266rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}

.footer-btn:last-child {
  margin-left: 58rpx;
}

.question {
  font-family: PingFangSC-Medium;
  font-size: 12px;
  color: #ff4949;
  letter-spacing: -0.29px;
  width: 750rpx;
  text-align: center;
  margin-top: 26rpx;
}

.credentials {
  display: flex;
  flex-wrap: wrap;
}

.credential-name {
  font-family: PingFangSC-Regular;
  font-size: 10px;
  color: #6d6d6d;
  letter-spacing: -0.24px;
  line-height: 13px;
}

.credential-container {
  margin-top: 26rpx;
}

.credential-container:nth-child(even) {
  margin-left: 40rpx;
}

.credential-container image {
  width: 300rpx;
  height: 160rpx;
}

.label {
  font-family: PingFangSC-Medium;
  font-size: 15px;
  color: #3d3d3d;
  letter-spacing: -0.36px;
}

.note {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #6d6d6d;
  letter-spacing: -0.31px;
}
