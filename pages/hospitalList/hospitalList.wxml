<!--index.wxml-->
<view class="container">
    <view class="view-container">
        <view>
            <input type="text" placeholder="搜索"/>
        </view>
      <image style="width: 750rpx; height: 300rpx;"  src="../../assets/images/Group2.png" />
        <view class="section">
            <picker range="{{array}}" value="{{index}}" bindchange="bindp" placeholder="aaa">
                <input placeholder="地区" value="{{array[index]}}"/>
            </picker>
        </view>
    <view wx:for="{{hosArray}}" wx:for-item="item" wx:key="{{item._id}}" style="flex:left">
         <image src="{{imgAddress}}{{item.name}}/{{item.logo}}.png" style="width:60px;height:60px"></image>
          <text style="display:block;font-size:16px">{{item.name}}</text>
          <text style="color:red;font-size:16px;display:block">建卡时间：9周之前</text>
          <text style="color:gray;font-size:16px">顺产：￥5000 / 剖腹产：￥8000</text>
     </view>
    </view>
</view>
