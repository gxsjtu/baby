.container {
  height: 100%;
  position: relative;
}

.header {
  display: flex;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding-top: 5px;
  padding-bottom: 5px;
  height: 40px;
  width: 750rpx;
  background: #fcfcfc;
}

.evaluate-title, .evaluate-add {
  width: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.evaluate-header, .evaluate-count {
  line-height: 1em;
}

.active {
  color: #df3030;
}

.split {
  background: rgba(0, 0, 0, 0.1);
  height: 1px;
  width: 750rpx;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
}

.evaluate-container {
  background: #f9f9f9;
  position: absolute;
  width: 750rpx;
  height: 700rpx;
  font-size: 14px;
}

.container-title {
  background-image: linear-gradient(-95deg, #ff6f6f 0%, #ff4949 54%, #ff6868 100%);
  font-family: PingFangSC-Medium;
  font-size: 18px;
  color: #fff;
  letter-spacing: -0.43px;
  line-height: 96rpx;
  height: 96rpx;
  text-align: center;
  border-top-left-radius: 2px;
  border-top-right-radius: 2px;
  position: relative;
}

.disable {
  color: #d3d3d3;
}

.submit {
  position: absolute;
  right: 10rpx;
  font-size: 16px;
  top: 0;
  padding: 0 20rpx;
}

.evaluate-placeholder {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #9d9d9d;
  letter-spacing: -0.31px;
}

textarea {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  letter-spacing: -0.31px;
  background: #f9f9f9;
  width: 650rpx;
  height: 400rpx;
  padding: 50rpx 50rpx 0rpx;
}

.info {
  display: flex;
  background: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.avatar {
  width: 110rpx;
  height: 110rpx;
  margin-left: 30rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.rate-container {
  display: flex;
  align-items: center;
}

.rate {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.evaluate-item {
  display: flex;
  flex-direction: column;
  font-size: 14px;
  font-family: PingFangSC-Regular;
}

.evaluate-item > view {
  margin-left: 35rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}

.evaluate-rate {
  width: 25rpx;
  height: 25rpx;
  margin-right: 4rpx;
}

.evaluate-rate image {
  width: 100%;
  height: 100%;
}

.date {
  margin-right: 8rpx;
  margin-top: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 10px;
  line-height: 1em;
  color: #9d9d9d;
  letter-spacing: -0.24px;
}

.score {
  display: flex;
  margin-top: -5px;
  justify-content: flex-end;
}

.message {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #3d3d3d;
  letter-spacing: -0.31px;
}

.user {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #ff4949;
  letter-spacing: -0.31px;
}

.user-container {
  display: flex;
  align-items: center;
}

.avatar-container {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10rpx;
}

.avatar-container image{
  width: 100%;
  height: 100%;
}

.border{
  border: 1px solid black;
}
