<view class="container">
  <view class="header">
    <image src="../../assets/images/lessCard.jpg"></image>
    <view class="title">办理小卡总结</view>
  </view>
  <view class="content">
    <scroll-view scroll-y="true">
      <view class="top-title">
        办事材料:
      </view>
      <view  class="font-s" style="margin-top:20rpx;margin-left:62rpx;" wx:for="{{needs}}" wx:for-item="need" wx:key="{{index}}">
        {{need}}
      </view>
      <view class="top-title" style="margin-top:40px;" hidden="{{ishid}}">
        办事地点:
      </view>
      <view class="font-s" wx:for="{{streets}}" wx:for-item="street" wx:key="{{street.name}}"  hidden="{{ishid}}" style="padding-bottom:20rpx;  border-bottom: 1rpx solid rgba(211, 211, 211, 0.3);">
        <view style="display:flex;flex-direction:row;margin-top:10px;">
          <view style="width:150rpx;text-align:right;">
            名称：
          </view>
          <view style="width:500rpx;">
            {{street.service.name}}
          </view>
        </view>
        <view style="display:flex;flex-direction:row;margin-top:10px;">
          <view style="width:150rpx;text-align:right;">
            地址：
          </view>
          <view style="width:500rpx;">
            {{street.service.address}}
          </view>
        </view>
        <view style="display:flex;flex-direction:row;margin-top:10px;">
          <view style="width:150rpx;text-align:right;">
            电话：
          </view>
          <view style="width:500rpx;">
            {{street.service.tel}}
          </view>
        </view>
        <view style="display:flex;flex-direction:row;margin-top:10px;">
          <view style="width:150rpx;text-align:right;">
            工作时间：
          </view>
          <view style="width:500rpx;">
            {{street.service.time}}
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
  <view style="margin-top:30px;display:flex;flex-direction:row;">
    <view class="view-b" style="border-right:1px solid rgba(0,0,0,0.10);">
      <image src="../../assets/images/hospitaldetail/yy.png" style="height:21px;width:21px;"></image>
      <view class="font-l">
        有用：356
      </view>
    </view>
    <view class="view-b">
      <image src="../../assets/images/hospitaldetail/xz.png" style="height:21px;width:21px;"></image>
      <view class="font-l">
        领取勋章
      </view>
    </view>
  </view>
  <view style="display:flex;flex-direction:row;align-items:center;height:55px;position:absolute;bottom:40rpx;width:100%;background:#fff">
    <button class="btn-style" bindtap="goBack">返回待办列表</button>
  </view>
</view>