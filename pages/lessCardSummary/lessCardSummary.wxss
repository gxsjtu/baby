}

.header {
  width: 750rpx;
  height: 168rpx;
  position: relative;
}

.header image {
  width: 100%;
  height: 100%;
}

.title {
  position: absolute;
  font-family: PingFangSC-Medium;
  font-size: 20px;
  color: #fff;
  letter-spacing: -0.48px;
  width: 750rpx;
  text-align: center;
  top: 50rpx;
}

.content {
  margin: 30rpx auto 0rpx auto;
  width: 690rpx;
