.container {
  position: relative;
  background: white;
  height: 100%;
}

page {
  height: 100%;
}


.header {
  width: 750rpx;
  height: 168rpx;
  position: relative;
}

.header image {
  width: 100%;
  height: 100%;
}

.title {
  position: absolute;
  font-family: PingFangSC-Medium;
  font-size: 20px;
  color: #fff;
  letter-spacing: -0.48px;
  width: 750rpx;
  text-align: center;
  top: 50rpx;
}

.content {
  margin: 30rpx auto;
  width: 690rpx;
  /*height: 700rpx;*/
  border: 1px solid rgba(254, 97, 97, 0.2);
  border-radius: 2px;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #6d6d6d;
  letter-spacing: -0.31px;
}

.top-title {
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #3d3d3d;
  letter-spacing: -0.39px;
  margin-top: 15px;
  margin-left: 15px;
}

.style-f {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #6d6d6d;
  letter-spacing: -0.31px;
  margin-top: 10px;
  margin-left: 15px;
}

.font-s {
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #6d6d6d;
  letter-spacing: -0.36px;
  padding-left: 30rpx;
}

.font-l {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #6d6d6d;
  letter-spacing: -0.31px;
  padding-left: 5px;
}

.view-b {
  justify-content: center;
  display: flex;
  flex-direction: row;
  width: 186px;
  height: 30px;
  align-items: center;

}

.btn-style {
  background: #ff4949;
  border-radius: 100px;
  width: 275px;
  height: 35px;
  line-height: 35px;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #fff;
  letter-spacing: -0.39px;
}

scroll-view {
  height: 690rpx;
}

.result {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.60);
    z-index: 999;
    display: flex;
    flex-direction: row;
    padding-top: 50%;
    justify-content: center;
}
