.logo {
  width: 750rpx;
  height: 236rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.split {
  width: 750rpx;
  height: 5px;
  background: #ebebeb;
}

.gift {
  width: 750rpx;
}

.flag {
  background: #ff4848;
  position: relative;
  height: 23px;
  /*line-height: 40rpx;*/
  display: flex;
  color: white;
  width:3em;
  padding-right: 18px;
  padding-left: 5px;
  margin-top: 10px;
  font-family: PingFangSC-Regular;
  font-size: 10px;
  letter-spacing: -0.37px;
  align-items: center;
}

.flag:after {
  display: block;
  content: '';
  position: absolute;
  background: white;
  transform: rotate(45deg);
  width: 18px;
  height: 18px;
  right: -8px;
  top: 2px;
}

.item {
  width: 725rpx;
  margin: -30rpx 0 0 25rpx;
  display: flex;
}

.left {
  width: 500rpx;
  display: flex;
  flex-direction: column;
  border-right: 2rpx solid #ebebeb;
  padding-top: 30rpx;
  margin-bottom: 30rpx;
}

.name {
  border-bottom: 2rpx solid #ebebeb;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 10rpx;
  line-height: 36rpx;
}

.menu {
  width: 750rpx;
  height: 45px;
  display: flex;
  align-items: center;
}

.menu-item {
  width: 350rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  font-family: PingFangSC-Regular;
  letter-spacing: -0.37px;
}

.menu-split {
  width: 2rpx;
  height: 15px;
  border-left: 2rpx solid #ebebeb;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
}

.dot.active {
  background: #ff4848;
}

.active {
  color: #ff4848;
}

.avatar {
  width: 225rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar image {
  width: 80%;
  height: 100%;
}

.list {
  font-size: 24rpx;
  color: #b8b8b8;
  font-family: PingFangSC-Regular;
  letter-spacing: -0.37px;
  padding-left: 20rpx;
  padding-right: 20rpx;
  line-height: 30rpx;
}

.gift-info {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 10rpx;
  line-height: 36rpx;
}

.gift-info-container {
  padding: 30rpx 40rpx;
}


.title {
  color: #ff4848;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
}

.desc {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  margin-top: 10rpx;
  line-height:30rpx;
}


.btn-style {
  background: #FF4949;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #fff;
  letter-spacing: -0.37px;
  border-radius: 100px;
  width:195px;
  height:35px;
  line-height: 35px;
}

.btn-f {
  border-radius: 100px;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  letter-spacing: -0.37px;
  width:195px;
  height:35px;
  line-height: 35px;
}

button::after {
  border: 0px;
}

button[disabled][type="default"], wx-button[disabled]:not([type]) {
  color: #fff;
  background: #d7d7d7;
}
