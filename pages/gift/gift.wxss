.container {
    position: relative;
}

.mask {
    background: rgba(0, 0, 0, 0.5);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
}

.logo {
    width: 750rpx;
    height: 236rpx;
}

.logo image {
    width: 100%;
    height: 100%;
}

.split {
    width: 750rpx;
    height: 5px;
    background: #ebebeb;
}

.gift {
    width: 750rpx;
}

.flag {
    background: #ff4848;
    position: relative;
    height: 23px;
    /*line-height: 40rpx;*/
    display: flex;
    color: white;
    width: 3em;
    padding-right: 18px;
    padding-left: 5px;
    margin-top: 10px;
    font-family: PingFangSC-Regular;
    font-size: 10px;
    letter-spacing: -0.37px;
    align-items: center;
}

.flag:after {
    display: block;
    content: '';
    position: absolute;
    background: white;
    transform: rotate(45deg);
    width: 18px;
    height: 18px;
    right: -8px;
    top: 2px;
}

.item {
    width: 725rpx;
    margin: -30rpx 0 0 25rpx;
    display: flex;
}

.left {
    width: 500rpx;
    display: flex;
    flex-direction: column;
    border-right: 2rpx solid #ebebeb;
    padding-top: 40rpx;
    margin-bottom: 30rpx;
}

.name {
    border-bottom: 2rpx solid #ebebeb;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-bottom: 10rpx;
    line-height: 36rpx;
    color: #b8b8b8;
    display: flex;
    letter-spacing: -0.64px;
    justify-content: space-between;
}

.menu {
    width: 750rpx;
    height: 45px;
    display: flex;
    align-items: center;
}

.menu-item {
    width: 350rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 16px;
    font-family: PingFangSC-Regular;
    letter-spacing: -0.37px;
}

.menu-split {
    width: 2rpx;
    height: 15px;
    border-left: 2rpx solid #ebebeb;
}

.dot {
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
}

.dot.active {
    background: #ff4848;
}

.active {
    color: #ff4848;
}

.avatar {
    width: 225rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.avatar image {
    width: 200rpx;
    height: 200rpx;
}

.list {
    font-size: 30rpx;
    color: #df3030;
    font-family: PingFangSC-Regular;
    letter-spacing: -0.64px;
    padding-left: 20rpx;
    padding-right: 20rpx;
    line-height: 40rpx;
}

.gift-info {
    font-size: 30rpx;
    font-family: PingFangSC-Regular;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-bottom: 10rpx;
    line-height: 46rpx;
}

.gift-info-container {
    padding: 30rpx 10rpx;
}

.title {
    color: #ff4848;
    font-size: 26rpx;
    font-family: PingFangSC-Regular;
}

.desc {
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    margin-top: 10rpx;
    line-height: 30rpx;
}

.btn-style {
    background: #ff4949;
    font-family: PingFangSC-Regular;
    font-size: 15px;
    color: #fff;
    letter-spacing: -0.37px;
    border-radius: 100px;
    width: 195px;
    height: 35px;
    line-height: 35px;
}

.btn-f {
    border-radius: 100px;
    font-family: PingFangSC-Regular;
    font-size: 15px;
    letter-spacing: -0.37px;
    width: 195px;
    height: 35px;
    line-height: 35px;
}

button::after {
    border: 0px;
}

button[disabled][type="default"], wx-button[disabled]:not([type]) {
    color: #fff;
    background: #d7d7d7;
}

.alert {
    width: 660rpx;
    height: 630rpx;
    position: absolute;
    bottom: 0rpx;
    left: 45rpx;
    background: white;
    z-index: 1000;
    border-radius: 10rpx;
    overflow: hidden;
    font-size: 16px;
}

.input-container {
    display: flex;
    margin-top: 20rpx;
    align-items: center;
}

.alert-title {
    background-image: linear-gradient(-95deg, #ff6f6f 0%, #ff4949 54%, #ff6868 100%);
    font-family: PingFangSC-Medium;
    font-size: 18px;
    color: #fff;
    letter-spacing: -0.43px;
    line-height: 96rpx;
    height: 96rpx;
    text-align: center;
    border-top-left-radius: 2px;
    border-top-right-radius: 2px;
}

.alert-container {
    padding: 20rpx;
}

.input-container>view:first-child {
    width: 240rpx;
    text-align: right;
}

.picker {
    border: 1px solid black;
    text-align: center;
    padding: 4rpx 30rpx;
    width: 150rpx;
    border-radius: 2rpx;
}

input {
    width: 360rpx;
}

.box {
    border: 1px solid #e5e5e5;
}

.box-header {
    margin: 4rpx;
    background: #e5e5e5;
    border-bottom: 4rpx solid rgba(0, 0, 0, 0.1);
    padding-left: 10rpx;
}

.box-container {
    padding: 10rpx 16rpx 40rpx;
}

.item-list {
    margin-top: 10rpx;
}

.list-header {
    color: white;
    display: inline-block;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.list-content {
    margin-left: 20rpx;
}

.role {
    margin-top: 40rpx;
}

.role:first-child {
    margin-top: 20rpx;
}

.note{
  color: rgba(0, 0, 0, 0.6);
  width: 700rpx;
  margin: 0 25rpx;
}

.note-header{
  text-align: center;
  font-size: 36rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.note-title{
    font-size: 30rpx;
}

.note-content{
  margin-top: 10rpx;
  text-indent: 2em;
  font-size: 30rpx;
}

.note-footer{
  text-align: right;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.qrCode{
  width:700rpx;
  margin:0 auto;
  margin-top:20rpx;
}
